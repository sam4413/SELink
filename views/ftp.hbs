<!doctype html>
<html>
<head>
<meta charset="utf-8">
<title>AMPLink Control Panel</title>
<link href="/style.css" rel="stylesheet" type="text/css">
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-iYQeCzEYFbKjA/T2uDLTpkwGzCiq6soy8tYaI1GyVh/UjpbCx/TYkiZhlZB6+fzT" crossorigin="anonymous">
</head>
<body>

<div class="sidenav">
  <img src="/resources/images/branding.png" alt="branding" width="200" height="80">
  <a href="/">Home</a>
  <a href="/panel">Server Control Panel&nbsp;</a>
  <a href="/console">Server Console</a>
  <a href="/players">Chat/Players</a>
  <a href="/grids">Grids/Entities</a>
  <a href="/users">Users</a>
  <a href="/about">About</a>
  <div class="brightercolor"><a href="#">Welcome, <b>{{#if message }}{{message}}{{/if}}</b><br><form action="/logout"><input type="submit" value="Logout" class="btn btn-danger"></form></a></div>
</div>
<main>
<div class="content">
  <h2>Server Control Panel</h2>
  <p class="subtitle2"><a href="/panel">Server Control Panel</a> > FTP Editor</p>
  <div class="row">
<div class="callout col-xl-10">
  <h3>Current Path: {{currentPath}}</h3>
  <hr>
<div class="col-xl-12 callout"><strong>File Manager</strong><br>
  <form style="display:inline-block;">
    <a class="text-adaptive" style="font-size: 20px;text-decoration: none;" href="javascript:history.back()"><i class=" bi bi-arrow-left-circle-fill"></i> Go back</a>
  </form>
&nbsp;&nbsp;&nbsp;&nbsp;
  <form action="/ftp/createFolder?path={{currentPath}}" method="POST" style="display:inline-block;" target="dummyframe" class="">
    Create Folder<br><div class="col-auto" style="display:inline-block;"><input class="form-control" type="text" name="name" id="name" required></div>
    <div class="col-auto" style="display:inline-block;"><button type="submit" onclick="setTimeout(function(){window.location.reload();},10);" value="Create Folder" class="btn btn-primary">Create Folder</button></div>
  </form>
&nbsp;&nbsp;&nbsp;&nbsp;
  <form action="/ftp/upload?path={{currentPath}}" method="post" style="display:inline-block;" enctype="multipart/form-data" class="" target="dummyframe" >
    Upload file<br><div class="col-auto" style="display:inline-block;"><input class="form-control" type="file" name="file" id="file" required></div>
    <div class="col-auto" style="display:inline-block;"><button class="btn btn-primary" type="submit" onclick="setTimeout(function(){window.location.reload();},1000);">Upload</button></div>
  </form>
</div>
<hr>
<table class="table">
  <thead class="text-adaptive callout">
    <tr>
      <th scope="col" id="sortName">Name</th>
      <th scope="col" id="sortSize">Size</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
  {{#each folders}}
    <tr class="text-adaptive">
      <td><i class="bi bi-folder"></i><a href="?path={{../currentPath}}{{name}}/" style="text-decoration: none;" class=""> {{name}}</a></td>
      <td>â€”</td> <!-- Usually folders don't have a size -->
      <td>
        <form action="/ftp/deleteFolder?path=.{{../currentPath}}{{name}}" method="POST" style="margin-right: 10px; display:inline-block;" >
            <button type="submit" style="" value="Delete" class="btn btn-link" onclick="return confirm('#### WARNING! ####\nYou are about to delete an ENTIRE FOLDER! This could BREAK the entire torch instance, or make AMPLink inaccessable! This action cannot be undone!');setTimeout(function(){window.location.reload();},10);"><i class="text-danger bi bi-trash"></i></button>
        </form>
      </td>
    </tr>
  {{/each}}

  {{#each files}}
    <tr class="text-adaptive">
      <td><i class="bi bi-file-earmark"></i> {{name}}</td>
      <td>{{this.size}}</td>
      <td>
        <button class="btn btn-link"> <a href="/download?path={{../currentPath}}{{name}}" style="text-decoration: none;" download><i class="text-primary-emphasis bi bi-file-earmark-arrow-down-fill"></i></a></button>
        <form action="/ftp/delete?path={{../currentPath}}{{name}}" method="POST" style="margin-right: 10px; display:inline-block;" >
            <button type="submit" style="" value="Delete" class="btn btn-link" onclick="return confirm('#### WARNING! ####\nAre you sure you want to delete this file? This action cannot be undone!');setTimeout(function(){window.location.reload();},10);"><i class="text-danger bi bi-trash"></i></button>
        </form>
      </td>
    </tr>
  {{/each}}
</tbody>

</table>
  <hr>
  
</div>
</div>

</main>
</body>
</html>